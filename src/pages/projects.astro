---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Professional Projects</div>
  </div>

  <HorizontalCard
    title="DayTruck – Transport & Logistics Platform"
    img="/jaafar-portfolio/provisional.jpg"
    desc="Designed and led a hybrid architecture (on-prem for development and staging, AWS for production) with IaC, CI/CD pipelines, observability, and cost-optimized infrastructure for a transport and delivery platform."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Mecafix – OCR-Powered Auto Repair Platform"
    img="/jaafar-portfolio/provisional.jpg"
    desc="Built a cloud-hosted management platform with OCR, geolocation, secure chat, and modular APIs using Next.js and Laravel. Deployed on Clever Cloud with automated delivery and performance-focused backend design."
    url="#"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Freelance Full-Stack Projects (10+ apps)"
    img="/jaafar-portfolio/provisional.jpg"
    desc="Delivered more than ten full-stack applications for clients using React, Laravel, WordPress, and VPS-based hosting—with CI/CD automation, secure deployments, and a focus on availability and maintainability."
    url="#"
    badge="FOSS"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Additional Projects</div>
  </div>

  <HorizontalCard
    title="Symfony Project Manager"
    img="/post_img.webp"
    desc="A full-featured project management system built with Symfony, using clean architecture, services, reusable components, and secure CRUD operations. Includes authentication, dashboards, and modular project workflows."
    url="https://github.com/jaafar-harabi/symfony-project-manager"
    badge="Open Source"
    target="_blank"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Secure Task API – DevSecOps Edition"
    img="/post_img.webp"
    desc="A fully secured REST API designed with DevSecOps practices: JWT authentication, input validation, secure headers, rate limiting, and CI/CD pipelines with automated quality checks. Perfect example of secure API engineering."
    url="https://github.com/jaafar-harabi/secure-task-api-devsecops"
    badge="Security"
    target="_blank"
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="TaskFlow API"
    img="/post_img.webp"
    desc="A modern and lightweight task management API built with clean architecture, high performance routing, modular services, and scalable structure. Ideal for learning backend fundamentals and API design."
    url="https://github.com/jaafar-harabi/taskflow-api"
    badge="API"
    target="_blank"
  />
</BaseLayout>
